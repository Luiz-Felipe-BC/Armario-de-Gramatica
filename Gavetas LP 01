<script>
    // Mostrar a charada e o campo de input para o drawer clicado
    function showCharada(num) {
        const charada = document.getElementById('charada' + num);
        if (charada.classList.contains('show')) {
            // Esconder se já estiver visível
            charada.classList.remove('show');
        } else {
            // Mostrar a charada
            charada.classList.add('show');
            // Focar no input
            const inputGroup = document.getElementById('input-group' + num);
            inputGroup.classList.add('show');
            const input = document.getElementById('keyword' + num);
            input.focus();
        }
    }

    // Verifica a palavra-chave para liberar a gaveta
    function checkKeyword(num) {
        const input = document.getElementById('keyword' + num);
        const feedback = document.getElementById('feedback' + num);
        const content = document.getElementById('content' + num);

        // Lista de respostas corretas para cada charada (minúsculas)
        const respostas = {
            1: 'substantivo',
            2: 'adjetivo',
            3: 'verbo',
            4: 'pronome',
            5: 'advérbio',
            6: 'preposição',
            7: 'conjunção',
            8: 'interjeição',
            11: 'artigo',
            12: 'numeral'
        };

        // Remove espaços e normaliza para lowercase
        const respostaUsuario = input.value.trim().toLowerCase();

        if (respostaUsuario === respostas[num]) {
            feedback.textContent = 'Resposta correta!';
            feedback.style.color = 'green';
            content.classList.add('show');
            input.disabled = true;
        } else {
            feedback.textContent = 'Resposta incorreta. Tente novamente!';
            feedback.style.color = 'red';
        }
    }

    // Função para mostrar a explicação (simples exemplo)
    function explicacao(num) {
        let msg = '';
        switch(num) {
            case 1:
                msg = 'Substantivo é a palavra que nomeia seres, coisas, lugares, sentimentos ou ideias.';
                break;
            case 2:
                msg = 'Adjetivo é a palavra que caracteriza ou qualifica o substantivo.';
                break;
            case 3:
                msg = 'Verbo indica ação, estado ou fenômeno da natureza.';
                break;
            case 4:
                msg = 'Pronome substitui ou acompanha o substantivo, indicando pessoa do discurso.';
                break;
            case 5:
                msg = 'Advérbio modifica o verbo, o adjetivo ou outro advérbio, indicando circunstância.';
                break;
            case 6:
                msg = 'Preposição liga termos da oração, estabelecendo relações entre eles.';
                break;
            case 7:
                msg = 'Conjunção conecta orações ou palavras, coordenando ou subordinando ideias.';
                break;
            case 8:
                msg = 'Interjeição expressa emoção, sentimento ou chamamento.';
                break;
            case 11:
                msg = 'Artigo determina o substantivo, indicando gênero e número.';
                break;
            case 12:
                msg = 'Numeral indica quantidade, ordem ou fração.';
                break;
            default:
                msg = 'Informação não disponível.';
        }
        alert(msg);
    }
</script>
